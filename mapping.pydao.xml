<?xml version="1.0"?>
<!-- This is an example mapping file for PyDAO. -->
<mapping>
   <import class="LeeDAO.Schematizers.PostgreSQLSchematizer"/>

   <database name="CinciLMS">
      <!-- One or the other of the two below options.
           The schema used for generation can be sourced
           during code generation or from a schema xml file. -->
      <schema xml="CinciLMS.schema.xml"/>
      <schema type="MySQL" host="localhost" port="3306" login="root"/>
      
      <!-- As many of the below options as necessary. --> 
      <!-- All DAO class generation defaults output to "DAO" folder
           in current directory. -->
      <generate code="PHP/MySQLi" out="DAO"/>
      <!-- Generates <databaseName>.schema.xml by default. -->
      <generate code="xml" out="CinciLMS.schema.xml"/>
      
      <!-- By default, all tables are included if no table
           elements exist.  If any table elements exist,
           only those tables are included, unless
           alltables is specified.  Specify alltables
           and then individual table elements if you want
           to include every table but want special mapping
           for some tables. -->
      <alltables/>

      <table name="Users">
         <!-- By default, all columns are included if no
              column elements exist.  If any column elements exist,
              only those columns are included, unless allcolumns is
              is specified.  Only indexes referenced by name are
              included unless allindexes is specified. -->
         <index name="Username" as="LoginName"/>
         <column name="Password" as="PasswordHash"/>
      </table>
   </database>
</mapping>

